<div class="container-fluid bg-dark text-light vh-100">
  <h1 class="text-center">Documentales</h1>

  <%= link_to 'Nuevo Documental', new_documentary_film_path, class: 'btn btn-primary mb-3' %>

  <div class="row">
    <% @documentaries.each do |documentary| %>
      <div class="col-md-6 col-lg-4">
        <div class="card bg-secondary text-light mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= documentary.name %></h5>
            <p class="card-text"><%= documentary.synopsis %></p>
            <p class="card-text"><strong>Director:</strong> <%= documentary.director %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>


</div>


