<div class="container-fluid bg-dark text-light vh-100 d-flex align-items-center">
  <div class="col-md-12 justify-content-center d-flex">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title text-center">Nueva Pel√≠cula</h2>
        <%= form_with(model: @movie, url: movies_path, local: true, class: 'mt-3') do |form| %>
          <div class="form-group">
            <%= form.label :name, class: 'font-weight-bold' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :synopsis, class: 'font-weight-bold' %>
            <%= form.text_area :synopsis, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :director, class: 'font-weight-bold' %>
            <%= form.text_field :director, class: 'form-control' %>
          </div>

          <div class="text-center">
            <%= form.submit 'Guardar', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

